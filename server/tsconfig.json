{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noEmit": true,
    "types": ["node"]
  },
  "include": ["apps/**/*", "packages/**/*"],
  "exclude": ["node_modules", "**/dist", "**/build"]
}
