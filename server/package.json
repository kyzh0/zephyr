{
  "name": "zephyr-workspace",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:api": "pnpm --filter @zephyr/api dev",
    "dev:scheduler": "pnpm --filter @zephyr/scheduler dev",
    "build:api": "pnpm --filter @zephyr/api build",
    "build:scheduler": "pnpm --filter @zephyr/scheduler build",
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier -w .",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^17.0.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.9.3",
      "tsup": "8.5.1"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "tesseract.js"
    ]
  },
  "packageManager": "pnpm@10.28.0"
}
