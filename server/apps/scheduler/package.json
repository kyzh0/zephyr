{
  "name": "@zephyr/scheduler",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"tsup --watch\" \"nodemon --enable-source-maps --watch dist/index.js\"",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@zephyr/shared": "workspace:*",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "md5": "^2.3.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.3",
    "node-cron": "^4.2.1",
    "node-dir": "^0.1.17",
    "p-limit": "^7.2.0",
    "sharp": "^0.34.5",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/md5": "^2.3.6",
    "@types/node-dir": "^0.0.37",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.0"
}
